<!-- Pending connections -->
<div class="suggested-connections pt-3">
    <p class="heading pb-0 mb-0">Pending Connections</p>
    <% if(locals.pendingConnections && pendingConnections.length>0) { %>
      <% for(let i=0;i<pendingConnections.length;i++) {%>
        <%let bio = pendingConnections[i].bio ; 
          let profilePicUrl = pendingConnections[i].profile_pic_url;
          if(!profilePicUrl) {
            profilePicUrl = "images/blank-profile-picture.png";
          } else {
            profilePicUrl = "uploads/"+profilePicUrl;
          }
          if(bio) {
            if(bio.length>60) {
              bio = bio.slice(0,60)+" . . .";
            } 
          } 
        %>
        <div class="user py-3">
          <a href="profile?user=<%= pendingConnections[i].username %>"><img src="<%= profilePicUrl %>" alt=""></a>
          <p class="user-name"><%= pendingConnections[i].fullname %></p>
          <p class="user-headline pb-2"><%= bio %></p>
          <button class="rounded request-button pending-btn" data-connection-id="<%= pendingConnections[i].username %>" name="<%= pendingConnections[i].username %>" type="button">Pending</button>
        </div>
      <% } %>
    <% } else { %>
      <div class="user py-3">
        <p class="mx-3">No pending connections</p>
      </div>
    <% } %>
</div>

